<%= render 'sidebar' %>

<div class="container-offers font black">

  <br>
  <h1 class="text-center blue"><%= @offer.name %></h1>
  <br>
  <div class="larger">
    <p>
      <%= @offer.description %>
    </p>
    <br>
    <p>
      <a href="<%= @offer.url %>" class="blue">View product in Amazon.</a>
    </p>
    <br>
    <% if @offer.product == true %>
      <p>Want a sample of the product? <a href="/pages/product">Learn more.</a></p>
    <% end %>
    <br>
    <% if current_user.try(:email) == "sbhenrichs@gmail.com" || "camblackwell2@gmail.com" %>
      <%= link_to 'Edit', edit_offer_path(@offer) %> |
      <%= link_to 'Back', offers_path %>
    <% else %>
      <%= link_to 'Back', offers_path %>
    <% end %>
  </div>
  
  <%= form_for @offer, method: :delete, :html => { id: "offer" }, :remote => true do |f| %>
    <%= f.submit :"Delete offer.", class: "offer-delete-submit" %>
  <% end %>
  
    <br>
  
  <%= form_for :push, url: pushes_path, :html => { id: "push" } do |f| %>
    <%= f.hidden_field :name, value: @offer.name %>
    <%= f.hidden_field :description, value: @offer.description %>
    <%= f.hidden_field :date, value: Date.today.to_s %>
    <%= f.hidden_field :url, value: @offer.url %>
    <%= f.hidden_field :owner, value: current_user.try(:email) %>
    <div class="text-center">
      <%= f.submit :"Create Campaign", class: "btn btn-info btn-lg" %>
    </div>
  <% end %>
  <br>
  <br>
  <br>
  
</div>