<html class="font">
  <head>
    
  </head>
  <body class="font">

    <div class="container-offers">
        <h1 class="text-center">Blog Force</h1>
        <h4 class="text-center">We like you just the way you are.</h4>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        
        <div class="form-group">
          <h3 class="text-center" id="space">Email</h3>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <h3 class="text-center">Website</h3>
          <%= f.url_field :url, class: "form-control" %>
        </div>

        <div class="form-group">
          <h3 class="text-center">New password<br>
          <h5 class="text-center"><i>(Leave blank if you don't want to change.)</i></h5></h3>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
          
        <div class="form-group">
          <h3 class="text-center">New password confirmation</h3>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="form-group">
          <h3 class="text-center">Old Password <i>(To confirm changes.)</i></h3>
          <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="form-group">
        <%= f.submit "Update", class: "btn btn-info" %>
        </div>

        <% end %>
        <br>
        <br>
        <h3>Cancel my account</h3>

        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-danger", data: { confirm: "Are you sure?" }, method: :delete %></p>
        <br>
        <br>
        <%= link_to "Back", :back %>
        <br>
        <br>
        <br>
    </div>
  </body>
</html>




