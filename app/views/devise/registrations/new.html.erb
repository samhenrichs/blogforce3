<html>
  <head>
    <link rel="stylesheet" href="custom.css">
  </head>
  <body>
    <div class="narrow">

      <h1 class="text-center">Blog Force</h1>
      <h4 class="text-center">Let's get going.</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group" id="space">
        <h3 class="text-center">Email</h3><br>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <h3 class="text-center">Password</h3>
        <% if @minimum_password_length %>
          <em class="sans-serif">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
      <div class="form-group">
        <h3 class="text-center">Password again. Sorry.</h3>
         <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "Sign Up", class: "btn btn-default" %>
      </div>
      
      <% end %>
      <%= render "devise/shared/links" %>

    </div>

  </body>
</html>
